[Unit]
Description=Better Go Playground
After=network.target
StartLimitIntervalSec=10
StartLimitBurst=5

[Service]
Type=simple
User=go-playground
WorkingDirectory=/home/go-playground
ExecStart=/opt/playground -f /opt/playground/data/packages.json
Restart=on-failure
LimitNOFILE=1048576
RestartSec=5

[Install]
WantedBy=multi-user.target
